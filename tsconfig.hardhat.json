{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["ES2020"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "allowJs": true,
    "isolatedModules": true,
    "noEmit": false
  },
  "include": ["scripts/**/*.ts", "hardhat.config.ts"],
  "exclude": ["node_modules", "app", "components", "lib"]
}
